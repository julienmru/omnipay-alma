{
    "name": "julienmru/omnipay-alma",
    "description": "Alma driver for the Omnipay PHP payment processing library",
    "keywords": [
        "omnipay",
        "alma"
    ],
    "homepage": "https://github.com/julienmru/omnipay-alma",
    "license": "MIT",
    "authors": [
        {
            "name": "Julien Tessier",
            "email": "julien@utile.co",
            "homepage": "https://www.utile.co/"
        }
    ],
    "require": {
        "omnipay/common": "^v3.0",
        "alma/alma-php-client": "^1.0"
    },
    "require-dev": {
        "omnipay/tests": "~3.0",
        "squizlabs/php_codesniffer": "^3",
        "phpro/grumphp": "^0.14"
    },
    "autoload": {
        "psr-4": {
            "Omnipay\\Alma\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Omnipay\\Alma\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 src/",
        "fix-style": "phpcbf -p --standard=PSR2 src/"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
